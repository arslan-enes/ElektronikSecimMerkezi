@model electionmvc.Context.tblSecim

@{
    if (Session["UserID"] == null || Session["userFirstName"] ==null || Session["userFirstName"]==null)
    {
        Response.Redirect("~/login/index");
    }
    Layout = null;
}

<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Elektronik Seçim Merkezi</title>
<link rel="shortcut icon" href="assets/images/Logo.png">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    body {
        background-color: lightgrey;
    }
</style>
<!-- Header Başlangıcı -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
        <img src="~/Images/Logo.png" alt="Logo" style="width:120px;" class="rounded-pill">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item" style="margin-left:20px; font-size:18px">
                    @Html.ActionLink("Anasayfa", "Index", "Admin", 0, new { @style = "text-decoration:none; color:white;" })
                </li>
                <li class="nav-item" style="margin-left:20px; font-size:18px">
                    @Html.ActionLink("Seçim Ekle", "SecimEkle", "Admin", 0, new { @style = "text-decoration:none; color:white;" })
                </li>
                <li class="nav-item" style="margin-left:20px; font-size:18px">
                    @Html.ActionLink("Aday Ekle", "AdayEkle", "Admin", 0, new { @style = "text-decoration:none; color:white;" })
                </li>
                <li class="nav-item" style="margin-left:20px; font-size:18px">
                    @Html.ActionLink("Çıkış Yap", "Index", "Login", 0, new { @style = "text-decoration:none; color:red;" })
                </li>
            </ul>
        </div>
    </div>
</nav>

@using (Html.BeginForm())
{
    <!-- Seçim Ekleme Başlangıç-->
    <div class="container" style="min-height:620px; margin-top:10px; margin-bottom:10px;">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-12 col-md-8 bg-dark text-white" style="margin-top: 50px; margin-bottom: 10px; padding-top:30px;">
                
                <center><h2 style="margin-bottom:30px;">Seçim Oluştur</h2></center>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row mb-3 mt-3">
                    <div class="col-12 col-md-5">
                        @Html.Label("Seçimin Adını Giriniz : ", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-12 col-md-7">
                        @Html.EditorFor(model => model.secimAd, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.secimAd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 mt-3">
                    <div class="col-12 col-md-5">
                        @Html.Label("Seçimin Başlangıç Tarihini Giriniz : ", htmlAttributes: new { @class = "control-label", @value = "Seçimin Başlangıç Tarihini Giriniz" })
                    </div>
                    <div class="col-12 col-md-7">
                        @Html.EditorFor(model => model.secimTarihi, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.secimTarihi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 mt-3">
                    <div class="col-12 col-md-5">
                        @Html.Label("Seçimin Bitiş Tarihini Giriniz : ", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-12 col-md-7">
                        @Html.EditorFor(model => model.secimSonTarihi, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.secimSonTarihi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <center>
                    <button type="submit" class="btn btn-danger" value="Create">Seçim Kaydet</button>
                </center>
                <br />
            </div>
            <div class="col-2"></div>
        </div>
    </div>
    <!-- Seçim Ekleme Bitiş-->


}
<!-- Footer Başlangıç-->
<footer class="bg-dark text-center text-white" style="margin-top:50px;">
    <div class="container p-4 pb-0">
        <section class="mb-4">
            <!-- Facebook -->
            <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                <i class="fab fa-facebook-f"></i>
            </a>

            <!-- Twitter -->
            <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                <i class="fab fa-twitter"></i>
            </a>

            <!-- Instagram -->
            <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                <i class="fab fa-instagram"></i>
            </a>
            <!-- Section: Social media -->
        </section>
    </div>

    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        © 2021 Copyright: Elektronik Seçim Merkezi
    </div>
    <!-- Copyright -->
</footer>
<!-- Footer Bitiş-->
